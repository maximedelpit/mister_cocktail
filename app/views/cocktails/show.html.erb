<% content_for(:title) do %>
  <%= @cocktail.name %> is on Mister Cocktail
<% end %>

<% content_for(:nav_title) do %>
 <% @cocktail.name %>
<% end %>

<div class="col-xs-10 col-xs-offset-1">
  <div class="card">
    <%= image_tag @cocktail.picture.url(:medium) %>
    <h1><%= @cocktail.name.capitalize %></h1>
    <ul class="list-unstyled">
      <% @cocktail.doses.each do | dose | %>
        <li>
          <strong><%= dose.ingredient.name %></strong> :
          <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash-o"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>


<div class="text-center col-xs-1 col-xs-offset-4">
<%= link_to "Back to cocktails", cocktails_path, {class:"btn btn-danger"} %>
</div>
<div class="text-center col-xs-1 col-xs-offset-1">
<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), {class:"btn btn-danger"} %>
</div>
