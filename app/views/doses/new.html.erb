<% content_for(:title) do %>
  <%= @cocktail.name %> - new dose
<% end %>

<h1>Add your dose for <%= @cocktail.name %></h1>

<p>Please fill the following fields</p>

<% ingredients = Ingredient.all %>


<%= bootstrap_form_for([@cocktail, @dose]) do | f | %>
  <% if @dose.errors.any? %>
    <div class="error_explanation">
      <ul class="list-unstyled">
        <% @dose.errors.full_messages.each do | message | %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-4 col-xs-offset-2"><%= f.text_field :description %></div>
  <div class="col-xs-2 col-xs-offset-1">
    <%= f.select(:ingredient_id, ingredients.map { | ingredient | [ingredient.name, ingredient.id] }, include_blank: true) %></div>
  <div class="col-xs-2 col-xs-offset-1"><%= f.submit %></div>
 <% end %>








